package daire.alanı;
import java.util.Scanner;
public class DaireAlanı {

   
    public static void main(String[] args) {
        int r;
        double a;
        double pi = 3.14;
        
        Scanner input =new Scanner(System.in);
            //yarıçap
        System.out.print("yarıçapı giriniz : ");
        r = input.nextInt();
            //merkezi açı
        System.out.print("dairenin merkezi açısını giriniz :");    
        a = input.nextDouble();


        //daire alanı
        double A = pi*r*r ;
        System.out.println("dairenin alanı : " + A);
        // dairenin çevresi
        double Ç = 2*pi*r;
        System.out.println("Dairenin çevresi : " + Ç );
        
        

        //Daire dilimi
        double D =(pi*(r*r)*a)/360;
        System.out.println("dilimin alanı : " + D);
                
        
              
    }
    
}
